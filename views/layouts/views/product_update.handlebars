<h2 style="margin: 0 auto;margin-top: 50pt; margin-bottom: 35pt; padding-left: 0pt" class="text-center">Update Product</h2>
<div class="container " style="max-width: 650pt;  padding-left: 150pt;">
	<form action="/product/values"   method="POST" class="form-horizontal " >
		<div class="form-inline" style="margin: 10pt">
			<label style="margin-right: 40pt">Product Name</label>
			<input type="text" name="name" class="form-control" value="{{product_name}}" required style="width: 220pt">
		</div>
		<div class="form-inline" style="margin: 10pt">
			<label style="margin-right: 45pt">Product Price</label>
			<input type="number" name="price" min="0" class="form-control" value="{{product_price}}" required style="width: 220pt">
		</div>
		<div class="form-inline" style="margin: 10pt">
			<label style="margin-right: 13pt">Product Description</label>
			<textarea name="description" class="form-control" style="width: 220pt" rows="13">{{product_description}}</textarea>
		</div>
		<div class="form-inline" style="margin: 10pt">
			<label style="margin-right: 18pt">Warranty (in years)</label>
			<input type="number" name="warranty" class="form-control" value="{{product_warranty}}" style="width: 220pt">
		</div>
		<div class="form-inline" style="margin: 10pt">
			<label style="margin-right: 81pt">Brand</label>
			<select required name="brand" class="form-control" id="brand_name" style="width: 220pt">
				<option value=""></option>
				{{#each brands}}
					<option value="{{this.id}}">{{this.name}}</option>
				{{/each}}
			</select>
		</div>
		<div class="form-inline" style="margin: 10pt">
			<label style="margin-right: 67pt">Category</label>
			<select required name="category" class="form-control" id="category_name" style="width: 220pt">
  				<option value=""></option>
				{{#each categories}}
					<option value="{{this.id}}">{{this.name}}</option>
				{{/each}}
			</select>
		</div>
		{{!-- <div class="form-inline" style="margin: 10pt">
			<label style="margin-right: 76pt">Picture</label>
				<input type="file" name="primary_picture" style="margin: 0 auto" class="form-control" required style="width: 220pt">
		</div> --}}
		<input type="hidden" name="product_id" value="{{product_id}}">
		
		{{!-- <input type="submit" name="" value="add"> --}}
		
	
</div>	
<div class="container text-center" style="width: 100pt;">
	<button type="submit" class="btn btn-sm form-update-button" style=" margin-left: 132pt">Update</button>
</div>
</form>
<input type="hidden" id="brand_id" value="{{brand}}">
<input type="hidden" id="category_id" value="{{category}}">

<script type="text/javascript">
	$( document ).ready(function() {
	    document.getElementById("brand_name").value = document.getElementById("brand_id").value;
	    document.getElementById("category_name").value = document.getElementById("category_id").value;
	});

</script>