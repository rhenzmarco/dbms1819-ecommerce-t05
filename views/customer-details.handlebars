<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<p>CUSTOMER DETAILS:</p>
			{{#each rows}}
			<div class="table-responsive">
				<table class="table table-striped table-hover table-design">
					<thead>
						<tr>
							<th>First Name</th>
							<th>Middle Name</th>
							<th>Last Name</th>
							<th>Email Address</th>
							<th>State</th>
							<th>City</th>
							<th>Street</th>
							<th>Zipcode</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>{{first_name}}</td>
							<td>{{middle_name}}</td>
							<td>{{last_name}}</td>
							<td>{{email}}</td>
							<td>{{state}}</td>
							<td>{{city}}</td>
							<td>{{street}}</td>
							<td>{{zipcode}}</td>							
						</tr>
					</tbody>
				</table>
			</div>
			{{/each}}
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<p>ORDER DETAILS:</p>
			<div class="table-responsive">
				<table class="table table-striped table-hover table-design">
					<thead>
						<tr>
							<th>Ordered Products</th>
							<th>Quantity</th>
							<th>Order Date</th>
						</tr>
					</thead>
					{{#each rows}}
					<tbody>
						<tr>
							<td>{{this.name}}</td>
							<td>{{this.quantity}}</td>
							<td>{{this.purchase_date}}</td>						
						</tr>
					</tbody>
					{{/each}}
				</table>
			</div>
		</div>
	</div>
</div>