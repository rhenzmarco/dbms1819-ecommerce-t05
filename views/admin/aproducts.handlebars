<style>
.table-responsive{
  font-family: helvetica;
  font-size: 20px;
}
.product-legends{
  font-family: georgia;
  font-size: 30px;
}
</style>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <div class="container">
   <a role="button" class="btn btn-secondary btn-lg btn-block" style="background-color: #262626;color:lightgray; margin-left: 75%; width: 200pt"href="/admin/product/create">Create Product</button></a>
  <div class="products">
    <fieldset class="product-fields">
      <legend class="product-legends">
        <strong>P R O D U C T S</strong>
      
      </legend>
      <div class="container">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-design">
            <thead>
              <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Price</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
            </thead>
            {{#each rows}}
            <tbody>
              <tr>
                <td><img src="{{this.products_image}}" style="float:left; height:50px; width:50px;"></td>
                <td>{{this.products_name}}</td>
                <td>{{this.brand_name}}</td>
                <td>{{this.category_name}}</td>
                <td>{{this.products_price}}</td>
                <td>{{this.products_description}}</td>
                <td><a href="/admin/products/{{this.products_id}}"><img src="/employee.png" style="height:25px; width:25px;"><br><br>
                <a href="/admin/product/update/{{this.products_id}}"><img src="/settings.png" style="height:25px; width:25px;"></td>
              </tr>
            </tbody>
            {{/each}}
          </table>
        </div>
      </div>
    </fieldset>
  </div>
</div>